{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "module": "ES2020",
    "resolveJsonModule": true,
    "stripInternal": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "build-configs/tsconfig/base.json",

  "display": "@solana-suite/core",
  "compilerOptions": {
    "paths": {
      "types/account": ["../types/account/dist"],
      "types/global": ["../types/global/dist"],
      "types/core": ["../types/core/dist"],
      "types/converter": ["../types/converter/dist"],
      "shared": ["../shared/src/", "../shared/dist/"],
      "instruction": ["../instruction/src/", "../instruction/dist/"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
